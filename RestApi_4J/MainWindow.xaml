<Window x:Class="RestApi_4J.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestApi_4J"
        mc:Ignorable="d"
        Title="Comic App v1.0" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Previous" Width="100" Margin="10" Padding="15"
                    Click="ButtonPrev_Click"/>
            
            <Button Content="Next" Width="100" Margin="10" Padding="15"
                    Click="ButtonNext_Click"/>
        </StackPanel>

        <Image Grid.Row="1" Name="imageComic"/>
    </Grid>
</Window>
